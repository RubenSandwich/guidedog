{
  "name": "@rubennic/guidedog",
  "version": "0.0.8",
  "main": "./dist/index",
  "repository": "https://github.com/RubenSandwich/guidedog",
  "author": "Ruben Niculcea <ruben.niculcea@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn removeBuild && tsc --build",
    "removeBuild": "rm -rf ./dist && mkdir ./dist",
    "test": "yarn build && jest",
    "lint": "tslint \"src/**/*.ts\""
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.0",
    "@types/parse5": "^5.0.2",
    "babel-jest": "^25.1.0",
    "jest": "^25.1.0",
    "prettier": "^1.18.2",
    "ts-jest": "^25.2.1",
    "tslint": "^5.19.0",
    "typescript": "^3.8.0"
  },
  "dependencies": {
    "parse5": "^5.1.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
